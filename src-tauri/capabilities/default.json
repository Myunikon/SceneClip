{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-destroy",
    "core:window:allow-hide",
    "core:window:allow-show",
    "core:window:allow-minimize",
    "core:window:allow-set-fullscreen",
    "core:window:allow-start-dragging",
    "os:default",
    "dialog:default",
    "clipboard-manager:default",
    "autostart:allow-enable",
    "autostart:allow-disable",
    "autostart:allow-is-enabled",
    "clipboard-manager:allow-read-text",
    "clipboard-manager:allow-write-text",
    "notification:default",
    "notification:allow-check-permissions",
    "notification:allow-request-permission",
    "notification:allow-register-action-types",
    "notification:allow-register-listener",
    "notification:allow-notify",
    "notification:allow-show",
    "notification:allow-cancel",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$DOWNLOAD"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$APP_DATA"
        },
        {
          "path": "$APP_DATA/**"
        },
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$TEMP"
        },
        {
          "path": "$TEMP/**"
        }
      ]
    },
    "shell:allow-open",
    "shell:allow-kill",
    "http:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        "$APP_DATA/**",
        "$APPDATA/**",
        "$DOWNLOAD",
        "$DOWNLOAD/**",
        "$TEMP",
        "$TEMP/**",
        "$RESOURCE/**",
        "$HOME/**",
        "$DESKTOP",
        "$DESKTOP/**",
        "$DOCUMENT",
        "$DOCUMENT/**"
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        "$APP_DATA/**",
        "$APPDATA/**",
        "$DOWNLOAD/**",
        "$TEMP/**",
        "$HOME/**",
        "$DESKTOP/**",
        "$DOCUMENT/**"
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        "$APP_DATA/**",
        "$APPDATA/**",
        "$DOWNLOAD/**",
        "$TEMP/**",
        "$RESOURCE/**",
        "$HOME/**",
        "$DESKTOP/**",
        "$DOCUMENT/**"
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        "$APP_DATA/**",
        "$APPDATA/**",
        "$DOWNLOAD/**",
        "$TEMP/**",
        "$RESOURCE/**",
        "$HOME/**",
        "$DESKTOP/**",
        "$DOCUMENT/**"
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        "$APP_DATA/**",
        "$APPDATA/**",
        "$DOWNLOAD/**",
        "$TEMP/**",
        "$HOME/**",
        "$DESKTOP/**",
        "$DOCUMENT/**"
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        "$APP_DATA/**",
        "$APPDATA/**",
        "$DOWNLOAD/**",
        "$TEMP/**",
        "$HOME/**",
        "$DESKTOP/**",
        "$DOCUMENT/**"
      ]
    },
    {
      "identifier": "fs:allow-lstat",
      "allow": [
        "$APP_DATA/**",
        "$APPDATA/**",
        "$DOWNLOAD",
        "$DOWNLOAD/**",
        "$TEMP",
        "$TEMP/**",
        "$RESOURCE/**",
        "$HOME/**",
        "$DESKTOP",
        "$DESKTOP/**",
        "$DOCUMENT",
        "$DOCUMENT/**"
      ]
    },
    {
      "identifier": "fs:allow-stat",
      "allow": [
        "$APP_DATA/**",
        "$APPDATA/**",
        "$DOWNLOAD",
        "$DOWNLOAD/**",
        "$TEMP",
        "$TEMP/**",
        "$RESOURCE/**",
        "$HOME/**",
        "$DESKTOP",
        "$DESKTOP/**",
        "$DOCUMENT",
        "$DOCUMENT/**"
      ]
    },
    {
      "identifier": "fs:allow-rename",
      "allow": [
        "$APP_DATA/**",
        "$APPDATA/**",
        "$DOWNLOAD/**",
        "$TEMP/**",
        "$HOME/**",
        "$DESKTOP/**",
        "$DOCUMENT/**"
      ]
    },
    {
      "identifier": "http:allow-fetch",
      "allow": [
        {
          "url": "https://www.gyan.dev/**"
        },
        {
          "url": "https://github.com/**"
        },
        {
          "url": "https://api.github.com/**"
        },
        {
          "url": "https://youtu.be/**"
        },
        {
          "url": "https://youtube.com/**"
        },
        {
          "url": "https://objects.githubusercontent.com/**"
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "bin/yt-dlp",
          "sidecar": true,
          "args": true
        },
        {
          "name": "bin/ffmpeg",
          "sidecar": true,
          "args": true
        },
        {
          "name": "bin/aria2c",
          "sidecar": true,
          "args": true
        },
        {
          "name": "bin/rsgain",
          "sidecar": true,
          "args": true
        },
        {
          "name": "run-powershell",
          "cmd": "powershell.exe",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "bin/yt-dlp",
          "sidecar": true,
          "args": true
        },
        {
          "name": "bin/ffmpeg",
          "sidecar": true,
          "args": true
        },
        {
          "name": "bin/aria2c",
          "sidecar": true,
          "args": true
        },
        {
          "name": "bin/rsgain",
          "sidecar": true,
          "args": true
        },
        {
          "name": "ffmpeg",
          "cmd": "ffmpeg",
          "args": true
        }
      ]
    },
    "deep-link:default",
    "log:default",
    "store:default"
  ]
}