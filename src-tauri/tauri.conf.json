{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ClipSceneYT",
  "version": "0.1.0",
  "identifier": "clipscene",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ClipSceneYT",
        "width": 800,
        "height": 600,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://i.ytimg.com https://*.googleusercontent.com https://*.ggpht.com https://i.vimeocdn.com; script-src 'self'; style-src 'self' 'unsafe-inline';",
      "capabilities": [
        "default"
      ]
    }
  },
  "plugins": {
    "shell": {
      "open": "^https?://"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/yt-dlp",
      "binaries/ffmpeg"
    ]
  }
}